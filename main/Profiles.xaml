<Window x:Class="NBackTask.Profiles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBackTask"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Profiles"
        Height="250"
        Width="158"
        MinHeight="150"
        MinWidth="158"
        ResizeMode="CanResize"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:ObjectToEnabled x:Key="obj2bool"/>
        
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0">Profiles:</Label>
        <ListView x:Name="lsvItems" Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  KeyUp="Items_KeyUp"/>
        <WrapPanel Grid.Row="2"
                   HorizontalAlignment="Center">
            <Button Style="{StaticResource CloseButton}"
                    IsEnabled="{Binding ElementName=lsvItems, Path=SelectedItem, Converter={StaticResource obj2bool}}"
                    IsDefault="True"
                    Content="Load"
                    Click="Load_Click"/>
            <Button Style="{StaticResource CloseButton}"
                            Content="Cancel"
                            IsCancel="True"/>
        </WrapPanel>
    </Grid>
</Window>
